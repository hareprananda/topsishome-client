{
  "extends": ["next", "prettier"],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": 2,
    "no-console": "warn",
    "no-empty": "error",
    "no-alert": "warn",
    "@typescript-eslint/no-unused-vars": "error",
    "no-unescaped-entities": "off"
  },
  "ignorePatterns": ["node_modules"]
}
